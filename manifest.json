{
    "manifest_version": 3,
    "name": "Avoid Social Media",
    "version": "1.0",
    "description": "Blur all social media sites",
    "background": {
        "service_worker": 
            "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_icon": "icon.png"
    },
    "permissions": [
        "scripting",
        "tabs",
        "activeTab"
    ]
}